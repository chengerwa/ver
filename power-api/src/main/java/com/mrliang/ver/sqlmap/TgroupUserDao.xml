<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<mapper namespace="com.mrliang.ver.dao.TgroupUserDao">

	<resultMap id="BaseResultMap" type="com.mrliang.ver.dto.TgroupUserDto">
        <result property="id" column="id"/>
        <result property="available" column="available"/>
        <result property="groupId" column="group_id"/>
        <result property="userId" column="user_id"/>
	</resultMap>
	
	
	<sql id="BaseColumns">
	    <![CDATA[
		id,available,group_id,user_id
	    ]]>
	</sql>

	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
        INSERT INTO tgroup_user (
        	id ,
        	available ,
        	group_id ,
        	user_id 
        ) VALUES (
        	#{id} ,
        	#{available} ,
        	#{groupId} ,
        	#{userId} 
        )
    ]]>
	</insert>
    
	<update id="update" >
    <![CDATA[
        UPDATE tgroup_user SET
	        available = #{available} ,
	        group_id = #{groupId} ,
	        user_id = #{userId} 
        WHERE 
	        id = #{id} 
    ]]>
	</update>
	
	<update id="updateSelect" >
    <![CDATA[
        UPDATE tgroup_user SET
			if test="null != available and '' != available">
				available = #{available} ,
		   </if>
			if test="null != groupId and '' != groupId">
				group_id = #{groupId} ,
		   </if>
			if test="null != userId and '' != userId">
				user_id = #{userId} 
		   </if>
        WHERE 
	        id = #{id} 
    ]]>
	</update>

    <delete id="delete">
    <![CDATA[
        DELETE FROM tgroup_user WHERE
        id = #{id} 
    ]]>
    </delete>
    
    <select id="findByPrimaryKey" resultMap="BaseResultMap">
		SELECT <include refid="BaseColumns" />
	    <![CDATA[
		    FROM tgroup_user 
	        WHERE 
		        id = #{id} 
	    ]]>
	</select>
	
		
    <select id="findPage_count" resultType="long">
        SELECT count(1) FROM tgroup_user 
		<include refid="findPage_where"/>    
    </select>
    
	<sql id="findPage_where">
		<where>	      				
	       <if test="null != condition.id and '' != condition.id ">
				AND id = #{condition.id}
			</if>
	       <if test="null != condition.available and '' != condition.available ">
				AND available = #{condition.available}
			</if>
	       <if test="null != condition.groupId and '' != condition.groupId ">
				AND group_id = #{condition.groupId}
			</if>
	       <if test="null != condition.userId and '' != condition.userId ">
				AND user_id = #{condition.userId}
			</if>
		</where>
	</sql>
	<sql id="selectList_where">
		<where>	      				
	       <if test="null != id and '' != id ">
				AND id = #{id}
			</if>
	       <if test="null != available and '' != available ">
				AND available = #{available}
			</if>
	       <if test="null != groupId and '' != groupId ">
				AND group_id = #{groupId}
			</if>
	       <if test="null != userId and '' != userId ">
				AND user_id = #{userId}
			</if>
		</where>
	</sql>
    <select id="findPage" resultMap="BaseResultMap">
    	SELECT <include refid="BaseColumns" />
	    FROM tgroup_user 
		<include refid="findPage_where"/>
    </select>
	<select id="findList" resultMap="BaseResultMap">
    	SELECT <include refid="BaseColumns" />
	    FROM tgroup_user 
		<include refid="selectList_where"/>
    </select>

	
</mapper>

