<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="com.mrliang.ver.dao.TconfigDao">

	<resultMap id="BaseResultMap" type="com.mrliang.ver.dto.TconfigDto">
        <result property="codecode" column="codecode"/>
        <result property="codename" column="codename"/>
        <result property="codevalue" column="codevalue"/>
        <result property="codetype" column="codetype"/>
        <result property="status" column="status"/>
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="BaseColumns">
	    <![CDATA[
		codecode,codename,codevalue,codetype,status
	    ]]>
	</sql>

	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
	<insert id="insert" useGeneratedKeys="true" keyProperty="codecode">
    <![CDATA[
        INSERT INTO tconfig (
        	codecode ,
        	codename ,
        	codevalue ,
        	codetype ,
        	status 
        ) VALUES (
        	#{codecode} ,
        	#{codename} ,
        	#{codevalue} ,
        	#{codetype} ,
        	#{status} 
        )
    ]]>
		<!--	
			oracle: order="BEFORE" SELECT sequenceName.nextval AS ID FROM DUAL 
			DB2: order="BEFORE"" values nextval for sequenceName
		<selectKey resultType="java.lang.Long" order="BEFORE" keyProperty="userId">
			SELECT sequenceName.nextval AS ID FROM DUAL 
        </selectKey>
		-->
	</insert>
    
	<update id="update" >
    <![CDATA[
        UPDATE tconfig SET
	        codename = #{codename} ,
	        codevalue = #{codevalue} ,
	        status = #{status} 
        WHERE 
	        codecode = #{codecode} ,
	        codetype = #{codetype} 
    ]]>
	</update>
	
	<update id="updateSelect" >
    <![CDATA[
        UPDATE tconfig SET
			if test="null != codename and '' != codename">
				codename = #{codename} ,
		   </if>
			if test="null != codevalue and '' != codevalue">
				codevalue = #{codevalue} ,
		   </if>
			if test="null != status and '' != status">
				status = #{status} 
		   </if>
        WHERE 
	        codecode = #{codecode} ,
	        codetype = #{codetype} 
    ]]>
	</update>

    <delete id="delete">
    <![CDATA[
        DELETE FROM tconfig WHERE
        codecode = #{id} ,
        codetype = #{id} 
    ]]>
    </delete>
    
    <select id="findByPrimaryKey" resultMap="BaseResultMap">
		SELECT <include refid="BaseColumns" />
	    <![CDATA[
		    FROM tconfig 
	        WHERE 
		        codecode = #{id} ,
		        codetype = #{id} 
	    ]]>
	</select>
	
		
    <select id="findPage_count" resultType="long">
        SELECT count(1) FROM tconfig 
		<include refid="findPage_where"/>    
    </select>
    
	<sql id="findPage_where">
		<where>	      				
	       <if test="null != condition.codecode">
				AND codecode = #{condition.codecode}
			</if>
	       <if test="null != condition.codename">
				AND codename = #{condition.codename}
			</if>
	       <if test="null != condition.codevalue">
				AND codevalue = #{condition.codevalue}
			</if>
	       <if test="null != condition.codetype">
				AND codetype = #{condition.codetype}
			</if>
	       <if test="null != condition.status">
				AND status = #{condition.status}
			</if>
		</where>
	</sql>
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 offset,pageSize,lastRows 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="findPage" resultMap="BaseResultMap">
    	SELECT <include refid="BaseColumns" />
	    FROM tconfig 
		<include refid="findPage_where"/>
    </select>

	
</mapper>

